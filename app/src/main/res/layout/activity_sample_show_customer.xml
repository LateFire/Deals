<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable name="customer" type="org.latefire.deals.database.Customer" />
  </data>

  <LinearLayout
      android:id="@+id/activity_sample_show_customer"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:orientation="vertical"
      tools:context="org.latefire.deals.activity.SampleShowCustomerActivity"
      >

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        >
      <EditText
          android:id="@+id/etFirstName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="First name"
          android:inputType="textCapWords"
          android:maxLines="1"
          android:text='@{customer.getFirstName() != null ? customer.getFirstName() : ""}'
          />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
      <EditText
          android:id="@+id/etDescription"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Last name"
          android:inputType="textCapWords"
          android:lines="1"
          android:text='@{customer.getLastName() != null ? customer.getLastName() : ""}'
          />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        >
      <EditText
          android:id="@+id/etPhone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="First name"
          android:inputType="textCapWords"
          android:maxLines="1"
          android:text='@{customer.getPhone() != null ? customer.getPhone() : ""}'
          />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
      <EditText
          android:id="@+id/etEmail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Last name"
          android:inputType="textCapWords"
          android:lines="1"
          android:text='@{customer.getEmail() != null ? customer.getEmail() : ""}'
          />
    </android.support.design.widget.TextInputLayout>

  </LinearLayout>
</layout>